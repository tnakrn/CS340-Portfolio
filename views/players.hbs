<h2>Players</h2>

{{!-- Table that shows all of the players --}}
<table id="players-table">
    <thead>
        {{!-- Print column headers --}}
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Join Date</th>
        </tr>
    </thead>

    <tbody>
        {{!-- For each row, print attributes in order --}}
        {{#each data}}
        <tr>
            <td>{{this.playerID}}</td>
            <td>{{this.userName}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.joinDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Create a new player --}}
<h3>Add New Player</h3>
<p>Enter new player information in the form below:</p>
<form id="add-player-form"
    onsubmit="addPlayer(inputUserName.value, inputFirstName.value, inputLastName.value, inputEmail.value, inputJoinDate.value)">
    <label for="input-userName">User Name: </label>
    <input type="text" name="inputUserName" id="input-userName" required>

    <label for="input-firstName">First Name: </label>
    <input type="text" name="inputFirstName" id="input-firstName" required>

    <label for="input-lastName">Last Name: </label>
    <input type="text" name="inputLastName" id="input-lastName" required>

    <label for="input-email">Email: </label>
    <input type="text" name="inputEmail" id="input-email" required>

    <label for="input-joinDate">Join Date: </label>
    <input type="date" name="inputJoinDate" id="input-joinDate" required>

    <div><input type="submit"></div>
</form>

